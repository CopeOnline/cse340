<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<%- messages() %>


<form class='login-form' action="GET">
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required>
    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required>
    <button type="submit">LOGIN</button>
    <p class="signup">No account?<a href="/account/register">Sign-up</a></p>
</form>
    